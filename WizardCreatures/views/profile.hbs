<section id="my-posts">
  <h1>My post</h1>

  <div class="my-container">
    {{#if creatures.length}}
      {{#each creatures}}
    <div class="my-card">
      <div class="card-header">
        <img src="{{image}}" />
      </div>
      <div class="card-body">
        <span class="tag tag-teal">Species: {{species}}</span>
        <h4>Name: {{name}}</h4>
        <div class="user">
          <div class="user-info">
            <h5>Author: {{author.firstName}} {{author.lastName}}</h5>
            <small>Rating of votes: {{votes.length}}</small>
            <a href="/catalog/{{_id}}" class="details_btn">Details</a>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
    {{else}}
   <div class="no-posts">
      <p class="no-offer">There are no own posts yet...</p>
   </div>
   {{/if}}
  </div>
</section>
