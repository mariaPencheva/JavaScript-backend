<section class="catalog" id="catalog">
  <h2>Book Reviews</h2>
  <div class="container">
    {{#if books.length}}
      {{#each books}}
        <div class="book">
          {{> book}}
        </div>
      {{/each}}
    {{else}}
      <h2 class="no-record">There are no book reviews found yet...</h2>
    {{/if}}
  </div>
</section>
