<section class="register-form-container">
  <form method="post">
    <h3>Register</h3>
    <label>Email</label>
    <input type="email" name="email" class="box" {{#if errors}}value="{{data.email}}"{{/if}} />

    <label>Username</label>
    <input type="text" name="username" class="box" {{#if errors}}value="{{data.username}}"{{/if}} />

    <label>Password</label>
    <input type="password" name="password" class="box"/>

    <label>Confirm Password</label>
    <input type="password" name="repass" class="box"/>

    <input type="submit" value="Register" class="btn" />
    <p>Have an account ? <a href="/login">Click here</a></p>
  </form>
</section>
